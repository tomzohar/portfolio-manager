{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@stocks-researcher/types": ["libs/types/src/index.ts"],
      "@stocks-researcher/styles": ["libs/styles/src/index.ts"],
      "@frontend/feature-dashboard": ["libs/feature-dashboard/src/index.ts"],
      "@frontend/ui-dashboard": ["libs/ui-dashboard/src/index.ts"],
      "@frontend/data-access-portfolio": [
        "libs/data-access-portfolio/src/index.ts"
      ],
      "@frontend/util-dialog": ["libs/util-dialog/src/index.ts"],
      "@frontend/data-access-auth": ["libs/data-access-auth/src/index.ts"],
      "@frontend/feature-auth": ["libs/feature-auth/src/index.ts"],
      "@frontend/util-auth": ["libs/util-auth/src/index.ts"],
      "@frontend/data-access-assets": ["libs/data-access-assets/src/index.ts"],
      "@frontend/ui-asset-search": ["libs/ui-asset-search/src/index.ts"],
      "@stocks-researcher/data-access-assets": [
        "libs/data-access-assets/src/index.ts"
      ],
      "@stocks-researcher/ui-asset-search": [
        "libs/ui-asset-search/src/index.ts"
      ],
      "@frontend/feature-layout": ["libs/feature-layout/src/index.ts"],
      "@frontend/portfolios-page-feature": [
        "libs/portfolios-page/feature/src/index.ts"
      ],
      "@frontend/portfolios-page-types": [
        "libs/portfolios-page/types/src/index.ts"
      ],
      "@frontend/portfolios-page-data-access": [
        "libs/portfolios-page/data-access/src/index.ts"
      ],
      "@stocks-researcher/data-access-dashboard": [
        "libs/data-access-dashboard/src/index.ts"
      ],
      "@stocks-researcher/ui-charts": ["libs/ui-charts/src/index.ts"],
      "@frontend/ui-charts": ["libs/ui-charts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
