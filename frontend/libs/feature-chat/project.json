{
  "name": "feature-chat",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/feature-chat/src",
  "prefix": "app",
  "projectType": "library",
  "tags": ["type:feature", "scope:chat"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/feature-chat/jest.config.ts",
        "tsConfig": "libs/feature-chat/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/feature-chat/**/*.scss\" --allow-empty-input"
      }
    },
    "stylelint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/feature-chat/**/*.scss\" --fix --allow-empty-input"
      }
    }
  }
}
