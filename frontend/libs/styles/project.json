{
  "name": "styles",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/styles/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/styles",
        "main": "libs/styles/src/index.ts",
        "tsConfig": "libs/styles/tsconfig.lib.json",
        "assets": [
          "libs/styles/*.md"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/styles/jest.config.ts"
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/styles/**/*.scss\" --allow-empty-input"
      }
    },
    "stylelint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/styles/**/*.scss\" --fix --allow-empty-input"
      }
    }
  }
}
