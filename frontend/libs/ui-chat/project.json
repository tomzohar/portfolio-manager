{
  "name": "ui-chat",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-chat/src",
  "prefix": "app",
  "projectType": "library",
  "tags": [
    "type:ui",
    "scope:chat"
  ],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ui-chat/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/ui-chat/**/*.scss\" --allow-empty-input"
      }
    },
    "stylelint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/ui-chat/**/*.scss\" --fix --allow-empty-input"
      }
    }
  }
}
