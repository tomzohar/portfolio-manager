{
  "name": "feature-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/feature-auth/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [
    "type:feature",
    "scope:auth"
  ],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "libs/feature-auth/ng-package.json",
        "tsConfig": "libs/feature-auth/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/feature-auth/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/feature-auth/jest.config.ts",
        "tsConfig": "libs/feature-auth/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/feature-auth/**/*.scss\" --allow-empty-input"
      }
    },
    "stylelint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"libs/feature-auth/**/*.scss\" --fix --allow-empty-input"
      }
    }
  }
}
